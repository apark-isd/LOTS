@inject SignInManager<ApplicationUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Language" content="en-us">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ISD Parking Services, County of Los Angeles</title>

    <link href="~/lib/bootstrap/dist/css/bootstrapSpacelab.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery-ui-1.13.2.custom/jquery-ui.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.8.0/html2pdf.bundle.min.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/all.min.css" rel="stylesheet" />
    <link type="text/css" href="~/css/bootstrap-spacelab.css" rel="stylesheet" />
    <style type="text/css">
        select {
            width: 200px;
        }

        body {
            margin: 0;
            background-color: white;
        }

        section {
            padding: 5%;
            min-height: 90vh;
        }
        /*.jumbotron {
                    margin-bottom: 0px;
                    background-image: url('~/img/indexImg.jpg');
                    background-color: white;
                    background-position: 0% 25%;
                    background-size: cover;
                    background-repeat: no-repeat;
                    color: #666;
                    font-family: Helvetica;
                }*/
        footer {
            padding: 0%;
            width: 100%;
        }
            /* unvisited & visited link 4 footer */
            footer a:link, footer a:visited,
            footer li a:link, footer li a:visited {
                color: #fff;
            }
            /* mouse over & selected link 4 footer */
            footer a:hover, footer li a:hover,
            footer a:active, footer li a:active {
                color: #d0af2a;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <section>
        <div class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/isdLOTS_rev.png" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                LOTS
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-controller="Home"
                                   asp-action="Index">Home</a>
                                <a class="dropdown-item" asp-controller="Home"
                                   asp-action="About">About</a>
                                <a class="dropdown-item" asp-controller="Home"
                                   asp-action="Privacy">Privacy</a>
@*                                <a class="dropdown-item" asp-controller="VehicleLiabilityWaivers"
                                   asp-action="Index">Vehicle Liability Waiver</a>*@
                                <!--<a class="dropdown-item" href="https://webadminisd.lacounty.gov/WebAdminISD/MyAccount/Default.aspx?uc=pwChange.ascx&1" target="_blank">Change Password</a>-->
                            </div>
                        </li>
                        @if (User.IsInRole("Coordinator"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Permittee
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-controller="Permittee"
                                   asp-action="Create">Permit New</a>
                                    <a class="dropdown-item" asp-controller="Permittee"
                                   asp-action="Index">Permit Search</a>
                                  @*<a class="dropdown-item" asp-controller="Permittee"
                                   asp-action="RequestedIndex">Permit Requested</a>*@
                                    <a class="dropdown-item" asp-controller="Commissioners"
                                   asp-action="Index">Commissioner</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Reports
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="https://app.powerbigov.us/reportEmbed?reportId=a7b0fa44-ca2e-4a29-8c20-08dcc8ff8397&autoAuth=true&ctid=07597248-ea38-451b-8abe-a638eddbac81">
                                        Permit
                                    </a>
                                    <a class="dropdown-item" href="https://app.powerbigov.us/reportEmbed?reportId=34295756-fa8c-4975-accb-fadfeaf8bac8&autoAuth=true&ctid=07597248-ea38-451b-8abe-a638eddbac81">
                                        Commissioner
                                    </a>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole("Administrator") || User.IsInRole("ISD Parking Services"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Permittee
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                   <a class="dropdown-item" asp-controller="Permittee"
                                   asp-action="Create">Permit New</a>
                                   <a class="dropdown-item" asp-controller="Permittee"
                                   asp-action="Index">Permit Search</a>
                                   <a class="dropdown-item" asp-controller="Permittee"
                                   asp-action="PermitRequested">Permit Requested</a>
                                   <a class="dropdown-item" asp-controller="PermitHistories"
                                   asp-action="Index">Permit History</a>
                                   <a class="dropdown-item" asp-controller="Commissioners"
                                   asp-action="Index">Commissioner</a>
                                   <a class="dropdown-item" asp-controller="Commissioners"
                                   asp-action="CommissionerRequested">Commissioner Requested</a>
                                   <a class="dropdown-item" asp-controller="VehicleLiabilityWaivers"
                                   asp-action="Index">Vehicle Liability Waiver</a>
                                   <a class="dropdown-item" asp-controller="VehicleLiabilityWaivers"
                                   asp-action="VehicleLiabilityWaiversRequested">Vehicle Liability Waiver Requested</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Manage
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-controller="Allocations"
                                   asp-action="index">Allocation</a>
                                    <a class="dropdown-item" asp-controller="Coordinators"
                                   asp-action="index">Coordinator</a>
                                    <a class="dropdown-item" asp-controller="Departments"
                                   asp-action="index">Department</a>
                                    <a class="dropdown-item" asp-controller="Lots"
                                   asp-action="index">Lot</a>
                                    <a class="dropdown-item" asp-controller="Locations"
                                   asp-action="index">Location</a>
                                    <a class="dropdown-item" asp-controller="PermitTypes"
                                   asp-action="index">Permit Type</a>
                                    <a class="dropdown-item" asp-controller="PermitteeTypes"
                                   asp-action="index">Permittee Type</a>
                                    <a class="dropdown-item" asp-controller="PayTypes"
                                   asp-action="index">Pay Type</a>
                                    <a class="dropdown-item" asp-controller="StatusTypes"
                                   asp-action="index">Status Type</a>
                                    <a class="dropdown-item" asp-controller="CheckTimes"
                                   asp-action="index">Check Time</a>
                                    @*<a class="dropdown-item" asp-controller="Account"
                                asp-action="ChangePassword">Password</a>*@
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Reports
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="https://app.powerbigov.us/reportEmbed?reportId=33b83f43-09a1-4910-b1fa-e67c79e8da6e&autoAuth=true&ctid=07597248-ea38-451b-8abe-a638eddbac81">
                                        Allocation
                                    </a>
                                    <a class="dropdown-item" href="https://app.powerbigov.us/reportEmbed?reportId=37078947-bc59-4084-b957-8a5b3f7251b8&autoAuth=true&ctid=07597248-ea38-451b-8abe-a638eddbac81">
                                        Billing
                                    </a>
                                    <a class="dropdown-item" href="https://app.powerbigov.us/reportEmbed?reportId=a5eeaeb4-42b2-41ce-94b1-25b72a335b56&autoAuth=true&ctid=07597248-ea38-451b-8abe-a638eddbac81">
                                        Commissioner
                                    </a>
@*                                     <a class="dropdown-item" href="https://app.powerbigov.us/reportEmbed?reportId=d2609511-e10a-4343-871f-0dec25a9eed6&autoAuth=true&ctid=07597248-ea38-451b-8abe-a638eddbac81">
                                        Permit
                                    </a> *@
                                    <a class="dropdown-item" href="https://app.powerbigov.us/reportEmbed?reportId=febd2bc1-d381-4f38-ad37-0928112deabd&autoAuth=true&ctid=07597248-ea38-451b-8abe-a638eddbac81">
                                        Permit
                                    </a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Vacancy
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-controller="Vacancies"
                                   asp-action="Create">New</a>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Admin
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-controller="Administration"
                                   asp-action="ListUsers">Users</a>
                                    <a class="dropdown-item" asp-controller="Administration"
                                   asp-action="ListRoles">Roles</a>
                                </div>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form method="post" asp-controller="account" asp-action="logout">
                                    <button type="submit" class="nav-link btn btn-linkv py-0" style="width:auto">
                                        Logout  @User.Identity.Name
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-action="register" asp-controller="account" class="nav-link">Register</a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="login" asp-controller="account" class="nav-link">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <!-- Image Background Page Header -->
        <!-- Note: The background image is set within the business-casual.css file. -->
        <!-- .container -->
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </section>

    <footer class="ignoreForPdf">
        <partial name="_FooterPartial" />
    </footer>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: true)
    }
</body>
</html>
