    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    @*<a asp-action="Index">Back to List</a>*@
    <a asp-action="Index" asp-route-id="@Model.Id">Back to List</a>
</form>





