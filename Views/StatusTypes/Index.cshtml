@model IEnumerable<LOTS3.Models.StatusType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h1>Index</h1>
    <p><a asp-action="Create">Create New</a></p>*@
<h4 style="padding-top:1em;">
    Status Types
    <a style="display: inline; font-size: 14px;" asp-action="Create">
        <i class="fas fa-user-plus"></i>
    </a>
</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StatusTypeNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusTypeNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusTypeName)
                </td>
                @*<td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>*@
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-1x fa-info"></i></a> |
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-1x fa-edit"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-1x fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
