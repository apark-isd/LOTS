@model LOTS3.Models.Vacancy

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 style="padding-top:1em;">Create<a style="display: inline; font-size: 14px;"></a></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LotId" class="control-label"></label>
                <select asp-for="LotId" class ="form-control" asp-items="ViewBag.LotId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label"></label>
                <select asp-for="LocationId" class ="form-control" asp-items="ViewBag.LocationId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CheckTimeId" class="control-label"></label>
                <select asp-for="CheckTimeId" class ="form-control" asp-items="ViewBag.CheckTimeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Occupied" class="control-label"></label>
                <input asp-for="Occupied" class="form-control" />
                <span asp-validation-for="Occupied" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

