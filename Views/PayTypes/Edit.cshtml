@model LOTS3.Models.PayType

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 style="padding-top:1em;">Edit</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PayTypeName" class="control-label"></label>
                <input asp-for="PayTypeName" class="form-control" />
                <span asp-validation-for="PayTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayTypeAmount" class="control-label"></label>
                <input asp-for="PayTypeAmount" class="form-control" />
                <span asp-validation-for="PayTypeAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

