@model List<UserRoleViewModel>

@{
    ViewBag.Title = "Edit Users in Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h4 style="padding-top:1em;">Add or remove users from this role<a style="display: inline; font-size: 14px;"></a></h4>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    @*<input type="hidden" asp-for="@Model[i].EmployeeNo" />
                    <input type="hidden" asp-for="@Model[i].FirstName" />
                    <input type="hidden" asp-for="@Model[i].LastName" />*@
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName - @Model[i].EmployeeNo - @Model[i].FirstName @Model[i].LastName 
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="update" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>
