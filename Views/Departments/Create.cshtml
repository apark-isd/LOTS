@model LOTS3.Models.Department

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 style="padding-top:1em;">Create</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DepartmentNo" class="control-label"></label>
                    <input asp-for="DepartmentNo" class="form-control" />
                    @*<span asp-validation-for="DepartmentNo" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label asp-for="DepartmentAbrv" class="control-label"></label>
