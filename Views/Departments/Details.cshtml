@model LOTS3.Models.Department

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 style="padding-top:1em;">Details</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartmentNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentAbrv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartmentAbrv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FundOrg)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FundOrg)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
        <dt class="col-sm-2">
            Coordinators
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.DepartmentName)*@
        </dd>
    </dl>
</div>
    <div class="col-md-12">
        <div class="col-md-12 row" style="padding:10px;">
            <div id="lot-container">
                <TABLE class='table' id="lotTable">
                    <thead>
                        <tr align='center'>
                            <th>Employee No</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone No</th>
                            <th>Email</th>
                            <th>Division</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.CoordinatorList.Count; i++)
                        {
                            <tr>
                                <td id="empno-@i" data-id="@Model.CoordinatorList[i].EmployeeNo">@Model.CoordinatorList[i].EmployeeNo</td>
                                <td id="empno-@i" data-id="@Model.CoordinatorList[i].FirstName">@Model.CoordinatorList[i].FirstName</td>
                                <td id="empno-@i" data-id="@Model.CoordinatorList[i].LastName">@Model.CoordinatorList[i].LastName</td>
                                <td id="empno-@i" data-id="@Model.CoordinatorList[i].PhoneNumber">@Model.CoordinatorList[i].PhoneNumber</td>
                                <td id="empno-@i" data-id="@Model.CoordinatorList[i].Email">@Model.CoordinatorList[i].Email</td>
                                <td id="empno-@i" data-id="@Model.CoordinatorList[i].Division">@Model.CoordinatorList[i].Division</td>
                            </tr>
                        }
                    </tbody>
                </TABLE>
            </div>
        </div>
    </div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
